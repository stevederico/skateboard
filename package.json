{
  "name": "skateboard",
  "private": true,
  "version": "0.2.0",
  "type": "module",  
  "workspaces": [
    "backend"
  ],
  "scripts": {
    "start": "npm run front & npm run server",
    "front": "vite --force --mode development",
    "server": "npm run --workspace=backend start",
    
    "build": "vite build --mode development;",
    "prod": "vite build --mode production;",
    "install-all": "npm install && npm install --workspace=backend"
  },
  "dependencies": {
    "@stevederico/skateboard-ui": "*",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.7",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "tailwindcss": "4.1.11",
    "vite": "^7.0.6"
  }
}
