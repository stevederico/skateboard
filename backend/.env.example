# Environment variables for Skateboard Backend
# Copy this file to .env and fill in your actual values

# Database Configuration
# If MONGO_URI is provided, MongoDB will be used
# If MONGO_URI is empty or not provided, SQLite will be used by default
# For SQLite (default): leave MONGO_URI empty or comment it out
# For MongoDB: uncomment and provide your MongoDB connection string
# MONGO_URI=mongodb://localhost:27017

# Stripe API keys
STRIPE_KEY=sk_test_your_stripe_secret_key_here
STRIPE_ENDPOINT_SECRET=whsec_your_webhook_endpoint_secret_here

# JWT Secret for token signing
JWT_SECRET=your_super_secure_jwt_secret_here_make_it_long_and_random

# Environment (development/production)
ENV=development

# Server port
PORT=8000
